<%= render 'shared/errors', obj: @article %>
<div class="row justify-content-center">
  <div class="col-10">
    <%= form_with model: @article, local: true do |f| %>

      <div class="form-group row">
        <%= f.label :title, class: "col-2 col-form-label" %>
        <div class="col-10">
          <%= f.text_field :title, class: "form-control" %>
        </div>
      </div>

      <div class="form-group row">
        <%= f.label :content, class: "col-2 col-form-label" %>
        <div class="col-10">
          <%= f.text_area :content, rows: 8, class: "form-control" %>
        </div>
      </div>

      <div class="form-group row">
        <%= f.label :category, class: "col-2 col-form-label" %>
        <div class="col-10">
          <%= f.collection_select(:category_ids, Category.all, :id, :name, { prompt: "('Command' or 'Windows' + click to make multiple selections)" }, { multiple: true, size: 3, class: "custom-select" }) %>
        </div>
      </div>

      <div class="form-group row justify-content-center mt-4">
        <%= f.submit class: "btn btn-green" %>
        <%= link_to 'Cancel & Return to Home', user_path(current_user), class: "btn btn-brown"%>
      </div>

    <% end %>
  </div>
</div>
