<div class="row justify-content-center">
  <div class="col-10">
    <%= form_with model: @article, local: true do |f| %>
      <div class="form-group row">
        <%= f.label :title, class: "col-2 col-form-label" %>
        <div class="col-10">
          <%= f.text_field :title, class: "form-control" %>
        </div>
      </div>

      <div class="form-group row">
        <%= f.label :description, class: "col-2 col-form-label" %>
        <div class="col-10">
          <%= f.text_area :description, rows: 1, class: "form-control" %>
        </div>
      </div>

      <div class="form-group row">
        <%= f.label :content, class: "col-2 col-form-label" %>
        <div class="col-10">
          <%= f.text_area :content, rows: 8, class: "form-control" %>
        </div>
      </div>

      <div class="form-group row justify-content-center">
        <%= f.submit class: "btn btn-green" %>
        <%= link_to 'Cancel & Return to Articles', articles_path, class: "btn btn-brown"%>
      </div>
    <% end %>
  </div>
</div>