<div class="jumbotron bg bg-no-pic col-10">
  <%= render 'layouts/msgs' %>
  <h1 class="text-center mt-2 mb-4 display-5 title">Create a New Category</h1>
  <%= render 'shared/errors', obj: @category %>
  <div class="row justify-content-center">
    <div class="col-10">
      <%= form_with model: @category, local: true do |f| %>

        <div class="form-group row">
          <%= f.label :name, class: "col-2 col-form-label" %>
          <div class="col-10">
            <%= f.text_field :name, class: "form-control" %>
          </div>
        </div>

        <div class="form-group row justify-content-center mt-4">
          <%= f.submit class: "btn btn-green" %>
          <%= link_to 'Cancel & Return to Home', root_path, class: "btn btn-brown" %>
        </div>

      <% end %>
    </div>
  </div>
</div>
