<% if obj && obj.errors.any? %>
  <div class="alert alert-danger col-10 alert-dismissible fade show" role="alert">
    <% if obj == @article %>
      <h5 class="alert-heading">The following errors prevented your article from being saved:</h5>
    <% elsif obj == @user %>
      <h5 class="alert-heading">The following errors prevented your account from being created:</h5>
    <% else %>
      <h5 class="alert-heading">The following errors occurred:</h5>
    <% end %>
    <ul>
      <% obj.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
    </ul>
    <button type="button" class="close" data-dismiss="alert" aria-label="Close">
      <span aria-hidden="true">&times;</span>
    </button>
  </div>
<% end %>
