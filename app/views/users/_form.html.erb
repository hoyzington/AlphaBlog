<%= render 'shared/errors', obj: @user %>
<div class="row justify-content-center">
  <div class="col-10">
    <%= form_with model: @user, local: true do |f| %>

      <div class="form-group row">
        <%= f.label :username, class: "col-2 col-form-label" %>
        <div class="col-10">
          <%= f.text_field :username, class: "form-control" %>
        </div>
      </div>

      <div class="form-group row">
        <%= f.label :email, class: "col-2 col-form-label" %>
        <div class="col-10">
          <%= f.email_field :email, class: "form-control" %>
        </div>
      </div>

      <div class="form-group row">
        <%= f.label :password, class: "col-2 col-form-label" %>
        <div class="col-10">
          <%= f.password_field :password, class: "form-control" %>
        </div>
      </div>

      <div class="form-group row justify-content-center mt-4">
        <%= f.submit(@user.new_record? ? "Sign Up" : "Update Account", class: "btn btn-green") %>
        <%= link_to 'Cancel & Return to Home', root_path, class: "btn btn-brown" %>
      </div>

    <% end %>
  </div>
</div>
